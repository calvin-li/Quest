<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/groovy</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ExpandableList">
        <item name="android:layout_margin">@dimen/standard_margins</item>
        <item name="android:padding">@dimen/standard_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="NotificationView">
    </style>

    <style name="QuestMainLine">
    </style>

    <style name="ExpArrow" parent="QuestMainLine">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_marginTop">@dimen/standard_margins</item>
        <item name="android:layout_marginBottom">@dimen/standard_margins</item>
        <item name="android:layout_marginLeft">@dimen/arrow_x_margins</item>
        <item name="android:layout_marginRight">@dimen/arrow_x_margins</item>

        <item name="android:padding">@dimen/standard_padding</item>

        <item name="android:textColor">@color/groovy</item>
        <item name="android:textSize">@dimen/arrow_text_size</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="QuestText" parent="QuestMainLine">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>

        <item name="android:layout_margin">@dimen/standard_margins</item>
        <item name="android:padding">@dimen/standard_padding</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:layout_weight">1</item>

        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>

        <item name="android:text">lorem ipsum</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:scaleType">centerInside</item>

        <item name="android:layout_margin">@dimen/standard_margins</item>
        <item name="android:padding">@dimen/standard_padding</item>

        <item name="android:focusable">false</item>

        <item name="android:tint">@color/groovy</item>
        <item name="android:backgroundTint">@color/buttonBackground</item>
    </style>

    <style name="notification">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="notification.wrapper" parent="notification">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="notification.text" parent="notification">
    </style>

    <style name="notification.arrow" parent="notification">
        <item name="android:layout_marginLeft">@dimen/arrow_gap</item>
        <item name="android:scaleY">@dimen/arrow_scale_y</item>
        <item name="android:scaleX">@dimen/arrow_scale_x</item>
    </style>

</resources>
