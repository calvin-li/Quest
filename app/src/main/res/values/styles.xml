<resources>

    <!-- Base application theme. -->
    <style name="AppThemeDefaultBase" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/groovy</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="AppThemeDefault" parent="AppThemeDefaultBase" />

    <style name="ExpandableListBase">
        <item name="android:layout_margin">@dimen/standard_margins</item>
        <item name="android:padding">@dimen/standard_padding</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>

        <item name="android:divider">@color/groovy</item>
        <item name="android:dividerHeight">@dimen/custom_list_divider_height</item>
    </style>

    <style name="ExpandableList" parent="ExpandableListBase" />

    <style name="NotificationView"/>

    <style name="QuestMainLine"/>

    <style name="ExpArrow" parent="QuestMainLine">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_marginTop">@dimen/standard_margins</item>
        <item name="android:layout_marginBottom">@dimen/standard_margins</item>
        <item name="android:layout_marginLeft">@dimen/arrow_x_margins</item>
        <item name="android:layout_marginRight">@dimen/arrow_x_margins</item>

        <item name="android:padding">@dimen/standard_padding</item>

        <item name="android:textColor">@color/groovy</item>
        <item name="android:textSize">@dimen/arrow_text_size</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="QuestText" parent="QuestMainLine">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_margin">@dimen/standard_margins</item>
        <item name="android:padding">@dimen/standard_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>

        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>

        <item name="android:text">lorem ipsum</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ChildLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_margin">@dimen/standard_margins</item>
        <item name="android:padding">@dimen/standard_padding</item>
        <item name="android:gravity">start|top</item>
        <item name="android:layout_weight">0</item>

        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>

        <item name="android:text">999</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/childLabel_text_size</item>
        <item name="android:textColor">@color/groovy</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:scaleType">centerInside</item>

        <item name="android:layout_margin">@dimen/standard_margins</item>
        <item name="android:padding">@dimen/standard_padding</item>

        <item name="android:focusable">false</item>

        <item name="android:tint">@color/groovy</item>
        <item name="android:backgroundTint">@color/button_background</item>
    </style>

    <style name="notification">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="notification.wrapper" parent="notification">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="notification.text" parent="notification">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="notification.text.main" parent="notification.text">
        <item name="android:maxLines">2</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="notification.arrow" parent="notification">
        <item name="android:layout_marginLeft">@dimen/arrow_gap</item>
        <item name="android:scaleY">@dimen/arrow_scale_y</item>
        <item name="android:scaleX">@dimen/arrow_scale_x</item>
        <item name="android:gravity">start|top</item>
        <item name="android:layout_weight">0</item>
    </style>

    <style name="QuestDialogStyleBase" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:colorAccent">@color/groovy_notification</item>
    </style>

    <style name="QuestDialogStyle" parent="QuestDialogStyleBase" />


    <style name="QuestTextBoxTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlActivated">@color/groovy_notification</item>
    </style>

</resources>
