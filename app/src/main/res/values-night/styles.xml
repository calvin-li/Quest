<resources>

    <style name="AppThemeDefault" parent="AppThemeDefaultBase">
        <item name="android:itemBackground">@color/secondary_dark</item>
    </style>

    <style name="ExpandableList" parent="ExpandableListBase">
        <item name="android:background">@color/primary_dark</item>
    </style>

    <style name="QuestDialogStyle" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/primary_dark</item>
        <item name="android:colorAccent">@color/groovy_notification</item>
        <item name="android:textColor">@color/groovy</item>
    </style>

    <style name="notification.text" parent="notification.textBase">
        <item name="android:textColor">@color/white_text</item>
    </style>

    <style name="notification.text.main" parent="notification.text.mainBase">
        <item name="android:textColor">@color/white_text</item>
    </style>

</resources>
